{% extends 'base.html.twig' %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block body %}
    {{ parent() }}

    <h3 class="text-center">Homepage</h3>
    <br>
    <div class="text-center">
        <p>
            Welcome to the chat app! To get started, select a contact you would like to chat with!
        </p><p>
          <br>
        </p>
    </div>

    <div class="text-center col-md-6 container">
        <h5>Contacts</h5>
    </div>
    <br>
    <div class="text-center col-md-6 container">

        <div class="profile-box2 rounded-top">
            <strong>Username</strong>
        </div>


            {% for contact in contacts %}
            <div class="profile-box1 text-center border">
                <p><a class="profile-box1" type="submit" href="{{ path('message_user', {'user': contact.username}) }}">
                    {{contact.username}}
                </a></p>
            </div>
            {% endfor %}
    </div>


{% endblock %}