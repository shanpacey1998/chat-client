{% extends 'base.html.twig' %}

{% block title %}Password Reset Email Sent{% endblock %}

{% block body %}
<h2 class="text-center" style="margin: 40px">Chat App</h2>

{% for flashError in app.flashes('reset_password_error') %}
    <div class="alert alert-danger" role="alert">{{ flashError }}</div>
{% endfor %}

<div class="row">

    <div class="col-sm-4"></div>
    <div class="col-md-6">

        <p>An email has been sent that contains a link that you can click to reset your password. This link will expire in {{ tokenLifetime|date('g') }} hour(s).</p>
        <p>If you don't receive an email please check your spam folder or <a href="{{ path('app_forgot_password_request') }}">try again</a>.</p>


        <a id="reg-btn" href="{{ path('app_login') }}">Back to Login</a>
    </div>
</div>
{% endblock %}
