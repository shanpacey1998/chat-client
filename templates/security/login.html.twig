{% extends "/base.html.twig" %}

{% block stylesheets %} {{ parent() }} {% endblock %}

{% block body %}

    <h2 class="text-center" style="margin: 40px">Chat App</h2>

    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-md-4">


            <form method="post" class="form-login" >

                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                </br>
                <h1 class="h3 mb-3 font-weight-normal">Please log in</h1>

                <label for="inputEmail" class=" form-label">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control form-login" placeholder="Email" required>

                <label for="inputPassword" class="form-label">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


{#                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.#}
{#                See https://symfony.com/doc/current/security/remember_me.html#}

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>


                </br>
                <button id="login" class="btn btn-lg btn-primary" type="submit">
                    Login
                </button>
                <a id="reg-btn" href="{{ path('user_register') }}">Register | </a>
                <a id="reg-btn" href="{{ path('app_forgot_password_request') }}">Forgot Password</a>
            </form>
        </div>
    </div>

{% endblock %}

{% block javascripts %} {{ parent() }} {% endblock %}
